<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/scanner_settings">
        
        <!--  input settings -->
        
        <PreferenceCategory  android:title="@string/scan_input_settings">
         <SwitchPreference
             android:key="scan_apply_input_back"
            android:title="@string/scan_input"
            android:defaultValue="true"
            android:summary="@string/open"
             ></SwitchPreference>
        </PreferenceCategory>
        
        <!--  voice settings -->
        
          <CheckBoxPreference android:key="scan_apply_voice"
            android:title="@string/scan_voice"
            android:defaultValue="true"></CheckBoxPreference>
          <!--  add enter settings -->
                    <CheckBoxPreference android:key="scan_apply_add_enter"
            android:title="@string/add_enter"
            android:defaultValue="true"></CheckBoxPreference>
          
          <!-- fun key settings -->
        <PreferenceCategory  android:title="@string/scan_key_settings">
                    <CheckBoxPreference android:key="scan_key_middle"
            android:title="@string/scan_key_middle"
            android:defaultValue="true"></CheckBoxPreference>
                    
                    <!--<CheckBoxPreference android:key="scan_key_f2"-->
            <!--android:title="@string/scan_key_f2"-->
            <!--android:defaultValue="true"></CheckBoxPreference>-->
                    
                    <CheckBoxPreference android:key="scan_key_fn"
            android:title="@string/scan_key_fn"
            android:defaultValue="true"></CheckBoxPreference>
                    
                    <CheckBoxPreference android:key="scan_key_left"
            android:title="@string/scan_key_left"
            android:defaultValue="true"></CheckBoxPreference>
                    
                    <CheckBoxPreference android:key="scan_key_right"
            android:title="@string/scan_key_right"
            android:defaultValue="true"></CheckBoxPreference>
        </PreferenceCategory>
</PreferenceScreen>